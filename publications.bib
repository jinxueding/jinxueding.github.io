	urldate = {2024-11-11},
	journal = {Journal of Advanced Ceramics},
	author = {Fan, Xiaomeng and Ma, Yuzhao and Deng, Yangfang and Ding, Jinxue and Cheng, Laifei},
	month = jun,
	year = {2021},
	pages = {529--536},
	file = {Fan et al. - 2021 - Microstructure and mechanical properties of Zr3Al3.pdf:files/1093/Fan et al. - 2021 - Microstructure and mechanical properties of Zr3Al3.pdf:application/pdf},
}

