	journal = {Journal of the European Ceramic Society},
	author = {Ding, Jinxue and Tian, Chuanmu and Li, Wei and Spielmann, Jonas and Maheu, Clément and Kintop, Nina and Widenmeyer, Marc and Skokov, Konstantin P. and Hofmann, Jan P. and Kramm, Ulrike I. and Xie, Wenjie and Weidenkaff, Anke},
	month = may,
	year = {2024},
	pages = {2972--2981},
	file = {Ding et al. - 2024 - Tuning anisotropic thermoelectric properties of Ti.pdf:files/1089/Ding et al. - 2024 - Tuning anisotropic thermoelectric properties of Ti.pdf:application/pdf},
