	number = {16},
	urldate = {2024-11-11},
	journal = {Advanced Engineering Materials},
	author = {Li, Wei and Ma, Shuailing and Cui, Siwen and Ding, Jingxue and Widenmeyer, Marc and Zhang, Xiaoqi and Zhan, Ying and Yu, Zhaoju and Cheng, Jiarong and Zhu, Pinwen and Cui, Tian and Weidenkaff, Anke and Riedel, Ralf},
